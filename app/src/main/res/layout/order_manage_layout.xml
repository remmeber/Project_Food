<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_common_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/tv_search_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_order_snatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_little"
            android:paddingEnd="@dimen/margin_huge"
            android:paddingLeft="@dimen/margin_huge"
            android:paddingRight="@dimen/margin_huge"
            android:paddingStart="@dimen/margin_huge"
            android:paddingTop="@dimen/margin_little"
            android:text="抢单"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/bt_order_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueNormal"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_little"
            android:paddingEnd="@dimen/margin_huge"
            android:paddingLeft="@dimen/margin_huge"
            android:paddingRight="@dimen/margin_huge"
            android:paddingStart="@dimen/margin_huge"
            android:paddingTop="@dimen/margin_little"
            android:text="进程"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big" />
    </LinearLayout>

    <include
        layout="@layout/common_swipe_recycle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_big"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginStart="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_small" />

</LinearLayout>