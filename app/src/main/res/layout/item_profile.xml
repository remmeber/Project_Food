<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_profile_subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/iv_profile_forward"
            android:layout_toStartOf="@+id/iv_profile_forward"
            android:textColor="@color/colorInActive"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="全部订单" />

        <ImageView
            android:id="@+id/iv_profile_forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/div_line"
            android:layout_alignRight="@+id/div_line"
            android:background="@drawable/btn_gray_light_style"
            android:paddingRight="@dimen/margin_big"
            android:src="@drawable/ic_chevron_right_black" />

        <View
            android:id="@+id/div_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/virtual_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_big"
            android:textColor="@color/text_profile"
            tools:text="dddd" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <TextView
            android:id="@+id/tv_profile_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_little"
            android:drawableTop="@drawable/ic_wait_pay"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:textColor="@color/colorInActive"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text=" center " />

        <TextView
            android:id="@+id/tv_profile_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_little"
            android:textColor="@color/colorInActive"
            android:drawableTop="@drawable/ic_delivering"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text=" center " />

        <TextView
            android:id="@+id/tv_profile_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_little"
            android:textColor="@color/colorInActive"
            android:drawableTop="@drawable/ic_comlete_order"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text=" center " />


    </LinearLayout>
</LinearLayout>