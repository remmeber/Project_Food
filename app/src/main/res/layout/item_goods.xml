<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_goods_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_goods_detail"
        android:layout_width="@dimen/food_image_size"
        android:layout_height="@dimen/food_image_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/image_margin"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_pic_failed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_detail_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_medium"
            tools:text="黄焖鸡米饭" />

        <TextView
            android:id="@+id/tv_goods_detail_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:textColor="@color/colorPay_Red"
            android:textSize="@dimen/text_medium"
            tools:text="￥:288.00" />

        <TextView
            android:id="@+id/tv_goods_detail_sell_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            tools:text="黄焖鸡米饭" />
    </LinearLayout>
</LinearLayout>


