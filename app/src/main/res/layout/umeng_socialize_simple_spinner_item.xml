<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:padding="4dp"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/umeng_socialize_spinner_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        tools:src="@drawable/umeng_socialize_refersh" />

    <TextView
        android:id="@+id/umeng_socialize_spinner_txt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@id/umeng_socialize_spinner_img"
        android:layout_toRightOf="@id/umeng_socialize_spinner_img"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingStart="20dp" />

</RelativeLayout>